<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorOnPrimary"
    android:gravity="center"
    android:layout_marginEnd="@dimen/pageMarginAndOffset"
    android:layout_marginStart="@dimen/pageMarginAndOffset"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:id="@+id/imageHolder"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_10sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/topRatedShowImage"
            android:adjustViewBounds="true"
            android:src="@drawable/colorofmusic_x"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/topRatedShowName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="movie Name"
        android:textColor="?attr/textBlack700"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rating"
        android:gravity="center_vertical"
        android:padding="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:src="@drawable/ic_star_half"
            app:tint="?attr/colorPrimary"
            android:layout_marginEnd="@dimen/_3sdp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topRatedShowRating"
            android:text="3.6"
            android:textColor="?attr/textBlack300"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:includeFontPadding="false"/>

    </LinearLayout>

</LinearLayout>